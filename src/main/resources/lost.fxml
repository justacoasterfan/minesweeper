<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" style="-fx-background-color: #c1bebeff;" spacing="20.0" xmlns="http://javafx.com/javafx/20.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.triagetrio.minesweeper.LostGUIController">
    <children>
      <ImageView fitWidth="576.0" pickOnBounds="true" preserveRatio="true">
         <image>
            <Image url="@assets/game_lost_patrick.png" />
         </image>
         <viewport>
            <Rectangle2D width="576.0" />
         </viewport>
      </ImageView>
        <Button fx:id="secondaryButton" onAction="#switchToPrimary" text="Play Again" />
    </children>
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
</VBox>
